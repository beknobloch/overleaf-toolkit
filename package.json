{
  "name": "docker-electron-app",
  "version": "1.5.1",
  "author": "The Tater Tots",
  "description": "An Electron app that controls Docker containers using a shell script",
  "private": true,
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-builder",
    "build": "electron-builder",
    "release": "npm run build && semantic-release"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "electron": "^26.2.0",
    "electron-builder": "^24.13.3",
    "semantic-release": "^24.2.3"
  },
  "build": {
    "appId": "com.example.Underbranch",
    "productName": "Underbranch",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      ".gitignore",
      "bin/**/*",
      "data/**/*",
      "config/**/*",
      "src/**/*",
      "!dist/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/*.map"
    ],
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "files": [
        "**/*",
        ".gitignore",
        "bin/**/*",
        "config/**/*",
        "!dist/*",
        "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
        "!**/*.map"
      ],
      "extraFiles": [
        "bin",
        "config",
        "lib",
        "data"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "msi"
      ],
      "icon": "assets/icon.ico",
      "extraFiles": [
        "bin",
        "config",
        "lib",
        "data"
      ]
    },
    "linux": {
      "target": "AppImage"
    },
    "dmg": {
      "background": "assets/installer-background.png",
      "window": {
        "width": 450,
        "height": 522
      },
      "contents": [
        {
          "x": 150,
          "y": 390,
          "type": "file"
        },
        {
          "x": 350,
          "y": 390,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Underbranch",
      "installerHeader": "assets/installer-header.bmp",
      "installerSidebar": "assets/installer-sidebar.bmp"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      [
        "@semantic-release/github",
        {
          "assets": [
            "dist/*.dmg",
            "dist/*.exe"
          ]
        }
      ]
    ]
  }
}
